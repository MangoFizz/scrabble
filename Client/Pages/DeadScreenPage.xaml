<Page x:Class="Client.Pages.DeadScreenPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client"
      xmlns:p = "clr-namespace:Client.Properties"
      mc:Ignorable="d" 
      Height="720" Width="1280">

    <Grid>
        <Rectangle x:Name="CloseRectangle" Fill="#7F000000" />
        <Grid Background="Azure" Margin="380,280,380,280"/>
        <Label Content="{x:Static p:Resources.DEAD_SCREEN_HEADER}" Margin="400,292,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="18" FontWeight="Bold" />
        <Label Content="{x:Static p:Resources.DEAD_SCREEN_TEXT}" Margin="400,331,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" FontWeight="Normal" />
        <Button Name="AcceptButton" Content="{x:Static p:Resources.COMMON_ACCEPT_BUTTON}" HorizontalAlignment="Left" Margin="753,384,0,0" VerticalAlignment="Top" Height="34" Width="122" FontSize="18" Click="AcceptButton_Click"/>
    </Grid>
</Page>
