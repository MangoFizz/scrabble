      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client"
      xmlns:p = "clr-namespace:Client.Properties"
      mc:Ignorable="d" 
      Height="720" Width="1280">

    <Grid>
        <Rectangle x:Name="CloseRectangle" MouseLeftButtonUp="RectagleMouseLeft_ButtonUp" Fill="#7F000000" />
        <Grid Background="Azure" Margin="133,64,133,80">
            <WrapPanel Name="AvatarsPanel" Margin="28,72,28,71" Background="LightGray"/>
        </Grid>
        <Label Content="{x:Static p:Resources.AVATAR_EDIT_MENU_HEADER}" HorizontalAlignment="Left" Margin="163,84,0,0" VerticalAlignment="Top" FontSize="22" FontWeight="Bold" Width="267"/>
        <Button Name="BackButton" Content="{x:Static p:Resources.COMMON_CANCEL_BUTTON}" HorizontalAlignment="Left" Margin="996,584,0,0" VerticalAlignment="Top" Height="34" Width="122" FontSize="18" Click="BackButton_Click"/>


    </Grid>
